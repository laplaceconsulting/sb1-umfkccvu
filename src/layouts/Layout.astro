---
import { supabase } from '../lib/supabase';

interface Props {
	title: string;
}

const { title } = Astro.props;

// Get current user session
const { data: { session } } = await supabase.auth.getSession();
const user = session?.user;

// Get user role if logged in
let userRole = null;
if (user) {
	const { data: profile } = await supabase
		.from('profiles')
		.select('role')
		.eq('id', user.id)
		.single();
	userRole = profile?.role;
}
---

<!doctype html>
<html lang="pt-BR">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Curso de EstatÃ­stica Aplicada ao Mercado Financeiro" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-gray-50">
		<nav class="bg-white shadow-md">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="flex justify-between h-16">
					<div class="flex">
						<a href="/" class="flex items-center text-xl font-bold text-gray-900">
							FinStats
						</a>
					</div>
					<div class="flex items-center space-x-4">
						{user ? (
							<>
								{userRole === 'admin' && (
									<a href="/admin/modules" class="text-gray-700 hover:text-gray-900 px-3 py-2">
										Admin
									</a>
								)}
								<button
									id="logoutButton"
									class="text-gray-700 hover:text-gray-900 px-3 py-2"
								>
									Sair
								</button>
							</>
						) : (
							<a href="/login" class="text-gray-700 hover:text-gray-900 px-3 py-2">
								Entrar
							</a>
						)}
					</div>
				</div>
			</div>
		</nav>
		<slot />
	</body>
</html>

<script>
	import { supabase } from '../lib/supabase';

	// Handle logout
	const logoutButton = document.getElementById('logoutButton');
	logoutButton?.addEventListener('click', async () => {
		await supabase.auth.signOut();
		window.location.href = '/login';
	});
</script>
